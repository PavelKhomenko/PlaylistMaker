<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">@dimen/bottom_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="rippleColor">@color/yp_red</item>
    </style>

    <style name="TextHead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/headers_text</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="SettingsImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="FrameSettingsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_all_around</item>
        <item name="android:paddingTop">@dimen/frame_padding</item>
        <item name="android:paddingEnd">@dimen/padding_all_around</item>
        <item name="android:paddingBottom">@dimen/frame_padding</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/padding_all_around</item>
        <item name="android:paddingTop">@dimen/frame_padding</item>
        <item name="android:paddingEnd">@dimen/padding_all_around</item>
        <item name="android:paddingBottom">@dimen/frame_padding</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:paddingStart">@dimen/margin_12dp</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextFieldStyle" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textColor">?attr/color</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
        <item name="hintTextColor">@color/yp_blue</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>


    <style name="ErrorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_19sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ErrorImageStyle">
        <item name="android:layout_width">@dimen/image_square_120dp</item>
        <item name="android:layout_height">@dimen/image_square_120dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>

    <style name="ServerDataTextStyle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">?attr/color</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>

    <style name="TabLayoutStylle">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_16sp</item>
    </style>

    <style name="bottomNavigationViewStyle">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="itemIconTint">@color/bottom_nav_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_color_selector</item>
    </style>

</resources>